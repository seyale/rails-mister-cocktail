<h1>Hola Mister Cocktail</h1>
<h4><%= link_to '+ Mix a new cocktail', new_cocktail_path, class: 'btn btn-danger' %></h4>


<div class="cards">
  <% @cocktails.each do |cocktail| %>
  <div class="card-category">
    <%= cl_image_tag cocktail.photo, width: 200, crop: :fill %>
      <%= link_to cocktail.name, cocktail %>
  </div>
  <% end %>
</div>
