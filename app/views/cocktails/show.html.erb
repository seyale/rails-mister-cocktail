<div class="container">
  <h1><%= @cocktail.name %></h1>

  <%= link_to 'add dose', new_cocktail_dose_path(@cocktail) %>
</div>

<div class="container">
  <table>
    <h4>Doses:</h4>
    <tbody>
      <thead>
          <th>Ingredient</th>
          <th>Description</th>
      </thead>
      <% @cocktail.doses.each do |dose| %>
        <tr>
          <td> <%= dose.ingredient.name %> </td>
          <td> <%= dose.description %></td>
          <td> <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container">
  <%= link_to '< back', cocktails_path %>
</div>
